
@{
    Layout = null;
}

<!DOCTYPE html>

<html data-ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GoldenThread </title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />    
</head>
<body>
    <script src="~/Scripts/q.js"></script>
    <script src="~/Scripts/angular.js"></script>

    <script src="https://rawgithub.com/Breeze/breeze.js/master/build/breeze.debug.js"></script>
    <script src="https://rawgithub.com/Breeze/breeze.js/master/build/adapters/breeze.bridge.angular.js"></script>

    <script src="~/Scripts/jquery-2.1.3.js"></script>

    <script src="~/App/main.js"></script>
    <script src="~/App/Controllers/ApplicationController.js"></script>

    <script src="~/App/DataServices/ApplicationDataService.js"></script>
   

    <script src="~/Scripts/breeze.metadata-helper.js"></script>
    <!-- The App -->
    <script src="~/App/logger.js"></script>
    <script src="~/App/toastr.js"></script>
    <script src="~/Scripts/breeze.directives.js"></script>
    <script src="~/Scripts/respond.js"></script>
    <script src="~/Scripts/angular-mocks.js"></script>
    <script src="~/Scripts/angular-resource.js"></script>

    <div class="jumbotron" style="vertical-align:middle">
       <span> <b> Application Listing </b></span>

    </div>
    <div data-ng-controller="ApplicationController as VA"> 
        <div><span><input type="button" class="btn-default" value="Create Application" data-ng-click="VA.CreateApplication()" /> </span></div>
        <div class="col-lg-8">
            <table class="table-bordered" width="80%" >
                <tr >
                    <td>ID</td>
                    <td>Key</td>
                    <td>Date</td>
                </tr>
                <tr data-ng-repeat="item in VA.items ">
                    <td>{{item.ID}}</td>
                    <td>{{item.APIKey}}</td>
                    <td>{{item.CreatedDate}}</td>
                </tr>
            </table>

        </div>
    </div>

    <script src="~/App/Controllers/ChapterController.js"></script>

    <script src="~/App/DataServices/ChapterDataService.js"></script>

    <div class="jumbotron" style="vertical-align:middle">
        <b> Chapter Listing </b>

    </div>
        <div data-ng-controller="ChapterController as VC">
            <div class="col-lg-8">
                <table class="table-bordered" width="80%">
                    <tr>
                        <td>ID</td>
                        <td>Title</td>
                        <td>Date</td>
                    </tr>
                    <tr data-ng-repeat="item in VC.items " class="ui-grid-filter-container">
                        <td>{{item.ID}}</td>
                        <td>{{item.Title}}</td>
                        <td>{{item.CreatedDate}}</td>
                    </tr>
                </table>

            </div>
        </div>

    <div class="jumbotron" style="vertical-align:middle">
      <b> Voice by Chapter </b>

    </div>
    <div data-ng-controller="ChapterController as VC">
        <div class="col-lg-8">
            <table class="table-bordered" width="80%">
                <tr>
                    <td>ID</td>
                    <td>Title</td>
                    <td>Tag</td>
                    <td>Date</td>
                </tr>
                <tr data-ng-repeat="item in VC.Voice " class="ui-grid-filter-container">
                    <td>{{item.ID}}</td>
                    <td>{{item.ChapterTitle}}</td>
                    <td>{{item.Tag}}</td>
                    <td>{{item.CreatedDate}}</td>
                </tr>
            </table>

        </div>
    </div>



    <script src="~/App/Controllers/VoicesController.js"></script>
    <script src="~/App/DataServices/VoiceDataService.js"></script>

    <div class="jumbotron" style="vertical-align:middle">
        <b> Voice Listing </b>

    </div>


    <div data-ng-controller="VoicesController as VV">
        <div class="col-lg-8">
            <table class="table-bordered" width="80%">
                <tr>
                    <td>ID</td>
                    <td>Title</td>
                    <td>Tag</td>
                    <td>IDFacebook</td>
                    <td>IDInstagram</td>
                    <td>Date</td>
                </tr>
                <tr data-ng-repeat="item in VV.Voice " class="ui-grid-filter-container">
                    <td>{{item.ID}}</td>
                    <td>{{item.ChapterTitle}}</td>
                    <td>{{item.Tag}}</td>
                    <td>{{item.IDFacebook}}</td>
                    <td>{{item.IDInstagram}}</td>
                    <td>{{item.VoiceStatus}}</td>
                    <td>{{item.CreatedDate}}</td>
                </tr>
            </table>

        </div>
    

    <div class="jumbotron" style="vertical-align:middle">
        <b> Author Listing </b>

    </div>

        <div class="col-lg-8">
            <table class="table-bordered" width="80%">
                <tr>
                    <td>ID</td>
                    <td>IDFacebook</td>
                    <td>IDInstagram</td>
                    <td>Date</td>
                </tr>
                <tr data-ng-repeat="item in VV.Author " class="ui-grid-filter-container">
                    <td>{{item.ID}}</td>
                    <td>{{item.IDFacebook}}</td>
                    <td>{{item.IDInstagram}}</td>
                    <td>{{item.CreatedDate}}</td>
                </tr>
            </table>

        </div>
   

        <div class="jumbotron" style="vertical-align:middle">
            <b> Voice by Status </b>

        </div>

        <div class="col-lg-8">
            <table class="table-bordered" width="80%">
                <tr>
                    <td>ID</td>
                    <td>Title</td>
                    <td>Tag</td>
                    <td>IDFacebook</td>
                    <td>IDInstagram</td>
                    <td>Status</td>
                    <td>Date</td>
                </tr>
                <tr data-ng-repeat="item in VV.Voice1 " class="ui-grid-filter-container">
                    <td>{{item.ID}}</td>
                    <td>{{item.ChapterTitle}}</td>
                    <td>{{item.Tag}}</td>
                    <td>{{item.IDFacebook}}</td>
                    <td>{{item.IDInstagram}}</td>
                    <td>{{item.VoiceStatus}}</td>
                    <td>{{item.CreatedDate}}</td>
                </tr>
            </table>

        </div>

        <div class="jumbotron" style="vertical-align:middle">
            <b> Tag Listing </b>

        </div>

        <div class="col-lg-8">
            <table class="table-bordered" width="80%">
                <tr>
                    <td>ID</td>
                    <td>Tag</td>
                    
                </tr>
                <tr data-ng-repeat="item in VV.Tag " class="ui-grid-filter-container">
                    <td>{{item.ID}}</td>
                    <td>{{item.Tag1}}</td>
                    
                </tr>
            </table>

        </div>
</div> 


    <div class="jumbotron" style="vertical-align:middle">
        <b> The End </b>

    </div>
</body>
</html>
